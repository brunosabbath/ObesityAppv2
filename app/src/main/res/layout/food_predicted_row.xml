<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/food_name"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="20dp"
            android:text="Predicted food: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/weight_food"
            android:padding="8dp"
            android:textColor="#222"
            android:layout_below="@+id/food_name"
            android:textSize="20dp"
            android:text="Weight: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_nutrients"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="17dp"
            android:text="List nutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_food"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp" />

        <TextView
            android:id="@+id/correct_prediction"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="17dp"
            android:text="Correct prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_food"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/remove_food"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="10dp"
            android:text="remove food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_name"
            android:layout_alignBottom="@+id/food_name"
            android:layout_alignEnd="@+id/list_nutrients" />

    </RelativeLayout>
</android.support.v7.widget.CardView>