<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/food_name_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_grams_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_name_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_energy_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_grams_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_carbohydrate_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_energy_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_cholesterol_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_carbohydrate_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_fiber_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_cholesterol_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_lipid_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_fiber_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_protein_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_lipid_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_sugar_detail"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_below="@+id/food_protein_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>