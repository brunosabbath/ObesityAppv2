<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sbbi.obesityappv2.fragment.InsightsFragment">

    <Button
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:id="@+id/insight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get insights"/>

    <Button
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_alignBottom="@+id/insight_button"
        android:id="@+id/recommendation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get recommendations"/>

</LinearLayout>
